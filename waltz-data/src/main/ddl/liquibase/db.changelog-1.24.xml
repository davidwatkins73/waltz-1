<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
                   logicalFilePath="db.changelog-1.23.xml">


    <changeSet id="20200415-4812-1"
               author="davidwatkins73">
        <createTable tableName="rel_change_initiative_to_measurable">
            <column name="id"
                    type="${id.type}"
                    autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="rci2m_pkey"/>
            </column>
            <column name="change_initiative_id"
                    type="${id.type}">
                <constraints nullable="true"/>
            </column>
            <column name="measurable_id"
                    type="${id.type}">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="20200415-4812-2"
               author="davidwatkins73">
        <createTable tableName="rel_change_initiative_to_measurable_decorator">
            <column name="relationship_id"
                    type="${id.type}">
                <constraints nullable="true"/>
            </column>
            <column name="relationship_kind"
                    type="${enum.type}">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated_at"
                    type="TIMESTAMP"
                    defaultValueComputed="${now.value}">
                <constraints nullable="false" />
            </column>
            <column name="last_updated_by"
                    type="${name.type}">
                <constraints nullable="false" />
            </column>
            <column name="external_id"
                    type="${external-id.type}">
                <constraints nullable="true"/>
            </column>
            <column name="provenance"
                    type="${provenance.type}">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>


    <changeSet id="20200415-4812-3"
               author="davidwatkins73">
        <comment>4812: fks between change initiative to measurable relationships</comment>
        <addForeignKeyConstraint baseTableName="rel_change_initiative_to_measurable"
                                 baseColumnNames="measurable_id"
                                 constraintName="rci2m_m_fk"
                                 referencedTableName="measurable"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="rel_change_initiative_to_measurable"
                                 baseColumnNames="change_initiative_id"
                                 constraintName="rci2m_ci_fk"
                                 referencedTableName="change_initiative"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="rel_change_initiative_to_measurable_decorator"
                                 baseColumnNames="relationship_id"
                                 constraintName="rci2md_r_fk"
                                 referencedTableName="rel_change_initiative_to_measurable"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
